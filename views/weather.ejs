<%- include('./header') %> 

<h1>Weather Page!</h1>

<form action="/weather/search" method="POST">
  <input type="text" name="zipcode" placeholder="Enter Zip">
  <button type="submit">Search</button>
</form>

<% if (results) { %>
  <div class="card" style="width: 18rem;">
    <img src="http://openweathermap.org/img/wn/<%= results.weather[0].icon %>@2x.png" class="card-img-top" alt="">
    <div class="card-body">
      <h5 class="card-title"><%= results.name %></h5>
      <p><%= results.weather[0].description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Currently <%= ((results.main.temp - 273) * 9/5 + 32).toFixed(0) %> Â°F</li>
    </ul>
  </div>
<% } %>

<%- include('./footer') %> 
